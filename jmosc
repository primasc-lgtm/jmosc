<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Custom Roman Alphabetic Journal Style</title>
    <id>http://www.zotero.org/styles/custom-roman-alphabetic</id>
    <link href="http://www.zotero.org/styles/custom-roman-alphabetic" rel="self"/>
    <author>
      <name>Generated by ChatGPT</name>
    </author>
    <category citation-format="author-date"/>
    <updated>2025-11-18T00:00:00Z</updated>
  </info>

  <!-- Sort bibliography alphabetically by author, then year, then title -->
  <bibliography>
    <layout suffix="\n">
      <!-- Roman numeral citation number at the beginning -->
      <text variable="citation-number" form="roman" text-case="uppercase" suffix=". "/>

      <!-- Authors as: Surname, Given names -->
      <names variable="author">
        <name and="text" name-as-sort-order="all" delimiter=", "/>
        <label form="short" prefix=" (" suffix=")"/>
      </names>

      <!-- Year in parentheses (if available) -->
      <date variable="issued" prefix="(" suffix="). " form="text">
        <date-part name="year"/>
      </date>

      <!-- Title -->
      <text variable="title" suffix=". "/>

      <!-- Container / Journal -->
      <group>
        <text variable="container-title" font-style="italic"/>
        <text variable="volume" prefix=", "/>
        <text variable="issue" prefix="(" suffix=")"/>
        <text variable="page" prefix=":"/>
        <text value=". "/>
      </group>

      <!-- Publisher for books / reports -->
      <group>
        <text variable="publisher"/>
        <text variable="publisher-place" prefix=", "/>
        <text value="."/>
      </group>

      <!-- DOI or URL if present -->
      <group>
        <text variable="DOI" prefix=" DOI: "/>
        <text variable="URL" prefix=" "/>
      </group>

    </layout>

    <sort>
      <key variable="author"/>
      <key variable="issued"/>
      <key variable="title"/>
    </sort>
  </bibliography>

  <!-- Keep citations simple (author-date) but this style is focused on bibliography formatting -->
  <citation>
    <layout>
      <text variable="author"/>
      <text value=" "/>
      <date variable="issued" form="text">
        <date-part name="year"/>
      </date>
    </layout>
  </citation>

</style>

<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Custom Roman Numeral Alphabetic Reference Style (Fixed)</title>
    <id>http://www.zotero.org/styles/custom-roman-numeral-alphabetic-fixed</id>
    <link href="http://www.zotero.org/styles/custom-roman-numeral-alphabetic-fixed" rel="self"/>
    <author>
      <name>Generated by ChatGPT</name>
    </author>
    <!-- numeric citation-format is OK because we put roman citation-number in bibliography;
         Mendeley mainly validates XML well-formedness and CSL keys -->
    <category citation-format="numeric"/>
    <updated>2025-11-18T00:00:00Z</updated>
  </info>

  <!-- Sorting: alphabetically by author family name, then year, then title -->
  <bibliography>
    <sort>
      <key variable="author" sort="ascending"/>
      <key variable="issued" sort="ascending"/>
      <key variable="title" sort="ascending"/>
    </sort>

    <layout suffix="\n">
      <!-- 1) Roman numeral at the very beginning -->
      <text variable="citation-number" form="roman" text-case="uppercase" suffix=". "/>

      <!-- 2) Authors as Family, Given (comma separated). No 'and' -->
      <names variable="author" delimiter=", ">
        <name name-as-sort-order="all" and="none" initialize-with=". " initialize="true"/>
      </names>

      <!-- 3) Year in parentheses immediately after authors -->
      <date variable="issued" prefix="(" suffix="). " form="text">
        <date-part name="year"/>
      </date>

      <!-- 4) Title followed by period -->
      <text variable="title" suffix=". "/>

      <!-- 5) Journal container: italicized, then volume(issue):pages. -->
      <group>
        <text variable="container-title" font-style="italic"/>
        <text variable="volume" prefix=", " />
        <text variable="issue" prefix="(" suffix=")"/>
        <text variable="page" prefix=":"/>
        <text value=". "/>
      </group>

      <!-- 6) Publisher/place fallback for books/reports -->
      <group>
        <text variable="publisher"/>
        <text variable="publisher-place" prefix=", " />
        <text value=". "/>
      </group>

      <!-- 7) DOI or URL (DOI preferred) -->
      <group>
        <text variable="DOI" prefix="DOI: " />
        <text variable="URL" prefix="" />
      </group>
    </layout>
  </bibliography>

  <!-- Keep in-text citations simple (not used much for this style) -->
  <citation>
    <layout>
      <text variable="citation-number" form="roman" text-case="uppercase"/>
    </layout>
  </citation>
</style>

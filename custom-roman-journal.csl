<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Custom Roman Numeral Alphabetic Reference Style</title>
    <id>http://www.zotero.org/styles/custom-roman-numeral-alphabetic</id>
    <link href="http://www.zotero.org/styles/custom-roman-numeral-alphabetic" rel="self"/>
    <author>
      <name>Generated by ChatGPT</name>
    </author>
    <category citation-format="numeric"/>
    <category field="engineering"/>
    <updated>2025-11-18T00:00:00Z</updated>
  </info>

  <!-- Bibliography: Roman numerals + alphabetical order -->
  <bibliography et-al-min="100" et-al-use-first="100">
    <sort>
      <key variable="author"/>
      <key variable="issued"/>
      <key variable="title"/>
    </sort>

    <layout suffix="
">
      <!-- Roman numeral numbering -->
      <text variable="citation-number" form="roman" text-case="uppercase" suffix=". "/>

      <!-- Author: Surname, Given; comma-separated; no 'and' -->
      <names variable="author" delimiter=", ">
        <name name-as-sort-order="all" and="none" delimiter=", "/>
      </names>

      <!-- Year in parentheses -->
      <date variable="issued" prefix=" (" suffix="). ">
        <date-part name="year"/>
      </date>

      <!-- Title -->
      <text variable="title" suffix=". "/>

      <!-- Journal articles formatting -->
      <group>
        <text variable="container-title" font-style="italic" suffix=", "/>
        <text variable="volume"/>
        <text variable="issue" prefix="(" suffix=")"/>
        <text variable="page" prefix=":"/>
        <text value=". "/>
      </group>

      <!-- Books / reports -->
      <group>
        <text variable="publisher"/>
        <text variable="publisher-place" prefix=", "/>
        <text value=". "/>
      </group>

      <!-- DOI or URL -->
      <group>
        <text variable="DOI" prefix="DOI: "/>
        <text variable="URL" prefix=" "/>
      </group>
    </layout>
  </bibliography>

  <!-- In-text citation not important; numeric placeholder -->
  <citation>
    <layout>
      <text variable="citation-number" form="roman" text-case="uppercase"/>
    </layout>
  </citation>
</style>
